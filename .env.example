# App
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Desktop only (bloqueia frontend no navegador comum)
FRONTEND_REQUIRE_DESKTOP=1

# Security
SESSION_SECRET=change-me-session-secret
AUTH_TOKEN_SECRET=change-me-auth-token-secret

# WhatsApp Cloud API (Meta)
WA_CLOUD_ACCESS_TOKEN=
WA_CLOUD_PHONE_NUMBER_ID=
WA_CLOUD_VERIFY_TOKEN=
WA_CLOUD_APP_SECRET=
WA_CLOUD_API_VERSION=v23.0
WA_CLOUD_BASE_URL=https://graph.facebook.com

# Firebase (projeto: autozap-4537e)
FIREBASE_PROJECT_ID=autozap-4537e

# Escolha UMA opção de credencial de servidor:
# Opção 1: caminho para service account JSON
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Opção 2: variáveis separadas
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Raiz das coleções no Firestore
FIREBASE_DB_ROOT=autozap

